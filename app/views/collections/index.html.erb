<div class='<%= controller.controller_name %>'>
  <h1>Listing Collections</h1>
  
  <div class="centered">
   <%= link_to 'New collection', new_collection_path %>
  </div>
  
<table>
  
  

  
    <% @collections.each do |collection| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= image_tag(collection.image_url, class:'list_image')%></td>
        <td class="list_description">
          <dl>
            <dt><%= collection.name %></dt>
            <dd><%= truncate(strip_tags(collection.description), length: 80 ) %></dt>
          </dl> 
        </td>
        <td class="list_actions">
          <%= link_to 'Show', collection %><br/>
          <%= link_to 'Edit', edit_collection_path(collection) %><br/>
        <%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
   
</table>

<br>

</div>


