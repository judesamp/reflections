<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "store" %>
  <%= stylesheet_link_tag "collections" %>
  <%= stylesheet_link_tag "bootstrap" %>
  <title>The Reflections Store</title>
  
</head>
<body>
  <div id="user_nav">
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit user', edit_user_registration_path %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> |
      <%= link_to "Login", new_user_session_path %>
    <% end %>
  </div>
  
  <div class='<%= controller.controller_name %>'>
    <div id="banner">
      
      <%= @page_title || "Your Reflections Store" %>
    </div>
    
     
    <div class ="navbar">
      
      
      
          
            <ul class="nav nav-pills my_navigation">
              <li class ="active"><%= link_to 'Home', main_path %></li>
              <li><%= link_to 'News', main_path %></li>
              <li><%= link_to 'About us', main_path %></li>
              
            
  
          
      
          <% if session[:user_id] %>
        
            <li><%= link_to 'Orders', orders_path %></li>
            <li><%= link_to 'Products', products_path %></li>
            <li><%= link_to 'Users', users_path %></li>
          </ul>
          <%= button_to 'Logout', logout_path, method: :delete %>
          <% end %>
        
          <div class = "pull-right">
            
            <%= link_to 'View Cart', cart_path(session[:cart_id]), :class=>"btn btn-info" %>
          </div>
     
    </div>
    
 
    
      
    
    
      <div id="main">
        <%= yield %>
      </div>
   
    </div> 
  </body>
</html>
   